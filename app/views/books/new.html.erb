
  <h1>Books</h1>
      <table>
  <thead>
    <tr>
    <th>title</th>
    <th>body</th>
    </tr>
    </thead>
       
       <tr>
           <% @books.each do |book| %>
        <td><%= book.title %></td>
      <td><%= book.body %></td> 
      </tr> 
      <% end %>
   
    </table>
       

<h1>New　book</h1>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>



